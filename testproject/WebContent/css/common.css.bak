@import url("reset_html5.css");
@import url(http://fonts.googleapis.com/css?family=PT+Sans:400,400italic,700,700italic&subset=latin,cyrillic-ext,latin-ext,cyrillic);



/* FLOATS */
.fltlft{ float:left;}
.fltrt{ float:right;}
.clrflt{ clear:both; line-height:1px; font-size:1px;}
.clear{ clear:both;}


/* CSS Document */
body {font-family: 'PT Sans', sans-serif, Verdana, Arial; margin:0; padding:0; line-height:1.5em; font-size:14px; background:#000000 url(../images/pg-bg-new.jpg) no-repeat top center; text-align:left;}
body { letter-spacing:0.01em\9; }

a, a:link, a:active, a:visited { outline:none; font-weight:normal;}
a:hover{ outline:none; font-weight:normal;}
.clr {clear:both;}




/*start--------------------------------------------------------------------------*/
.hiddencol{display:none;}
.viscol{display:block;}
/*hide/visible column css end--------------------------------------------------------------------------*/ 

 /*maincontainer css start--------------------------------------------------------------------------*/
.maincontainer{font-family: 'PT Sans', sans-serif, Verdana, Arial; width:969px;/*968 */ /*height:575px;*/ margin:0 auto; padding:0 0; position:relative;} 

.topband{width:969px; height:576px; padding:0 0; margin:0 0;}

.logo{position:absolute; z-index:1; top:37px; left:10px; width:550px;}
.logo img{float:left; border:none;}

.nav{position:absolute; top:10px; right:50px; text-align:right;}
.nav a{color:#FFC; padding:0 0; margin:0 0; text-decoration:none;}
.nav a:hover{color:#ffffff; text-decoration:underline;}
.nav img{ vertical-align:middle; padding:0 5px; margin:0 0; border:none;}

.boy{position: absolute; top:66px; right:120px; z-index:1;}
.girl{position: absolute; top:63px; right:140px; z-index:1;}

.menu{position:absolute; top:529px; left:0; margin:0 0; padding:0 0; color:#996600;}
.menu a{padding:0 0; margin:0 15px; color:#996600; text-decoration:none; text-transform:uppercase; font-size:16px; font-weight:700;}
.menu a:hover{color:#000000;}

.footer-area{font-family: 'PT Sans', sans-serif, Verdana, Arial; width:100%;/*968 */  margin:0 0; padding:10px 0; background:#000000; color:#ffffff; font-size:13px;}
.footer-ca{width:929px; margin:0 auto; padding:0 20px;}
.social-media{float:right; text-align:right;}
.social-media a{padding:0 0; margin:0 0 0 5px;}

